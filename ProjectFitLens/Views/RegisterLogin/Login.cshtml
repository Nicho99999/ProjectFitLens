@model ServiceContracts.DTO.AthleteLogin;
@{
ViewBag.Title = "Lets get fit!";
}


<head>
    <link rel="stylesheet" type="text/css" href="~/css/Glasses.css" asp-append-version="true"/>
    <link rel="stylesheet" type="text/css" href="~/css/Body.css" asp-append-version="true">
    <link rel="stylesheet" type="text/css" href="~/css/SignIn.css" asp-append-version="true">
</head>




<body>

<div asp-validation-summary="All" class="validation-error"></div>

<div class="container" style="display: flex; justify-content: center; align-items: center; gap: 20px; margin-top: 100px;">
    <div class="glasses" style="margin-right: 25px; margin-top: 125px">
        <div class="lens lens--left">
            <div class="eye eye--left">
                <div class="eye-pupil"></div>
            </div>
        </div>
        <div class="lens lens--right">
            <div class="eye eye--right">
                <div class="eye-pupil"></div>
            </div>
        </div>
        <div class="arm arm--left"></div>
        <div class="arm arm--right"></div>
    </div>

    <div class="loginbody">
        <div class="form-container">

            <form asp-controller="RegisterLogin" asp-action="Login" method="post"
                  autocomplete='off' class='form'>
                <div class='control' style="display: flex; justify-content: space-between; width: 100%;">
                    <h1>
                        <a asp-controller="RegisterLogin" asp-action="Login">Sign In</a>
                    </h1>
                    <h1>
                        <a asp-controller="RegisterLogin" asp-action="Register">Register</a>
                    </h1>
                </div>



                @* Email *@

                <div class='control block-cube block-input'>
                    <div>
                        <input asp-for="Email" placeholder="Email">
                    </div>
                    <div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class='bg-top'>
                        <div class='bg-inner'></div>
                    </div>
                    <div class='bg-right'>
                        <div class='bg-inner'></div>
                    </div>
                    <div class='bg'>
                        <div class='bg-inner'></div>
                    </div>
                </div>




                @* Password *@
                <div class='control block-cube block-input'>
                    <div>
                        <input asp-for="Password" placeholder="Password">
                    </div>
                    <div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class='bg-top'>
                        <div class='bg-inner'></div>
                    </div>
                    <div class='bg-right'>
                        <div class='bg-inner'></div>
                    </div>
                    <div class='bg'>
                        <div class='bg-inner'></div>
                    </div>
                </div>


                <div asp-validation-summary="All" class="validation-error"></div>
                <button class='btn block-cube block-cube-hover' type='submit'>

                    <div class='bg-top'>
                        <div class='bg-inner'></div>
                    </div>
                    <div class='bg-right'>
                        <div class='bg-inner'></div>
                    </div>
                    <div class='bg'>
                        <div class='bg-inner'></div>
                    </div>
                    <div class='text'>
                        Log In
                    </div>

                </button>

            </form>


        </div>

    </div>

</div>
</body>
