@using Microsoft.AspNetCore.Mvc.TagHelpers
@using ServiceContracts.Enums
@model ServiceContracts.DTO.MainRegister
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
ViewBag.Title = "Register";
}



<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" type="text/css" href="~/css/Glasses.css" />
    <link rel="stylesheet" type="text/css" href="~/css/Body.css">
    <link rel="stylesheet" type="text/css" href="~/css/SignIn.css">
</head>



<ul>
    @if (ViewBag.Errors != null)
    {
    @foreach (var error in ViewBag.Errors)
    {
    <li>@error</li>
    }

    }

</ul>




<body>

<div class="container" style="display: flex; justify-content: center; align-items: center; gap: 10px; overflow: visible; transform: translateY(20px)">
<div class="loginbody">
<div class="form-container">

    <form asp-controller="RegisterLogin" asp-action="Register" method="post"
          autocomplete='off' class='form'>
        
        <div class='control' style="display: flex; justify-content: space-between; width: 100%;">
            <h1>
                <a asp-controller="RegisterLogin" asp-action="Login">Sign In</a>
            </h1>
            <h1>
                <a asp-controller="RegisterLogin" asp-action="Register">Register</a>
            </h1>
        </div>


        @* User Name *@

        <div class='control block-cube block-input'>
            <div>
                <input asp-for="UserName" placeholder="Username">
            </div>
            <div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class='bg-top'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg-right'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg'>
                <div class='bg-inner'></div>
            </div>
        </div>




        @* Email *@

        <div class='control block-cube block-input'>
            <div>
                <input asp-for="Email" placeholder="Email">
            </div>
            <div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class='bg-top'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg-right'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg'>
                <div class='bg-inner'></div>
            </div>
        </div>


        @* Compare Email *@

        <div class='control block-cube block-input'>
            <div>
                <input asp-for="CompareEmail" placeholder="Confirm Email">
            </div>
            <div>
                <span asp-validation-for="CompareEmail" class="text-danger"></span>
            </div>
            <div class='bg-top'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg-right'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg'>
                <div class='bg-inner'></div>
            </div>
        </div>



        @* Password *@
        <div class='control block-cube block-input'>
            <div>
                <input asp-for="Password" placeholder="Password">
            </div>
            <div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class='bg-top'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg-right'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg'>
                <div class='bg-inner'></div>
            </div>
        </div>

        @* Confirm Password *@
        <div class='control block-cube block-input'>
            <div>
                <input asp-for="ComparePassword" placeholder="Confirm Password">
            </div>
            <div>
                <span asp-validation-for="ComparePassword" class="text-danger"></span>
            </div>
            <div class='bg-top'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg-right'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg'>
                <div class='bg-inner'></div>
            </div>
        </div>


        @* Phone Number *@
        <div class='control block-cube block-input'>
            <div>
                <input asp-for="PhoneNumber" placeholder="Phone Number">
            </div>
            <div>
                <span asp-validation-for="PhoneNumber" class="validation-error"></span>
            </div>
            <div class='bg-top'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg-right'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg'>
                <div class='bg-inner'></div>
            </div>
        </div>


        <div asp-validation-summary="ModelOnly" class="validation-error"></div>
        <button class='btn block-cube block-cube-hover' type="submit">
            <div class='bg-top'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg-right'>
                <div class='bg-inner'></div>
            </div>
            <div class='bg'>
                <div class='bg-inner'></div>
            </div>
            <div class='text'>
                Register
            </div>
        </button>


    </form>

</div>
</div>
</div>
</body>



</html>





































