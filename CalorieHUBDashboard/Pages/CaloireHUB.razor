<div id="nutritionModal" class="modal">
    <div class="modal-content">
        <span id="closeModal" class="close">&times;</span>
        <h2>Enter Nutritional Information</h2>
        <form id="nutritionForm">
            <label for="brand">*Brand / Restaurant:</label>
            <input type="text" id="brand" name="brand" placeholder="Generic">
            <br>
            <label for="description">*Food Description:</label>
            <input type="text" id="description" name="description" placeholder="Crackers">


            <hr>
            <h3>Serving Information</h3>
            <label for="servingSize">Serving Size:</label>
            <input type="text" id="servingSize" name="servingSize" placeholder="e.g., 1">
            <br>
            <label for="unit">Unit:</label>
            <input type="text" id="unit" name="unit" placeholder="e.g., cup">
            <br>
            <label for="servingsPerContainer">Servings Per Container:</label>
            <input type="number" id="servingsPerContainer" name="servingsPerContainer" placeholder="e.g., 10">
            <hr>






            <h3>Nutrition Facts</h3>

            <!-- Main Nutritional Information -->
            <label for="calories">Calories:</label>
            <input type="number" id="calories" name="calories">
            <br>
            <label for="sodium">Sodium (mg):</label>
            <input type="number" id="sodium" name="sodium">
            <br>
            <label for="sugar">Sugar (g):</label>
            <input type="number" id="sugar" name="sugar">
            <br>
            <label for="totalFat">Total Fat (g):</label>
            <input type="number" id="totalFat" name="totalFat">
            <br>
            <label for="carbs">Total Carbs (g):</label>
            <input type="number" id="carbs" name="carbs">
            <br>
            <label for="fiber">Dietary Fiber (g):</label>
            <input type="number" id="fiber" name="fiber">

            <hr>

            <!-- Additional Nutritional Information -->
            <h4>Additional Nutrients</h4>
            <div class="additional-nutrients">
                <label for="vitaminA">Vitamin A (%):</label>
                <input type="number" id="vitaminA" name="vitaminA" class="small-input">

                <label for="vitaminC">Vitamin C (%):</label>
                <input type="number" id="vitaminC" name="vitaminC" class="small-input">

                <label for="vitaminK">Vitamin K (%):</label>
                <input type="number" id="vitaminK" name="vitaminK" class="small-input">

                <label for="calcium">Calcium (%):</label>
